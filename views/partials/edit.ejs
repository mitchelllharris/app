<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit note</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <h1>Edit note</h1>

    <% if (errorMessage) { %>
        <div class="alert alert-danger"><%= errorMessage %></div>
    <% } %>

    <form action="/edit/<%= id %>" method="post">
        <div class="mb-3">
            <label for="noteTitle" class="form-label">note Title</label>
            <input id="noteTitle" class="form-control" type="text" name="noteTitle" value="<%= note.title %>">
        </div>
        <div class="mb-3">
            <label for="noteDescription" class="form-label">note Description</label>
            <input id="noteDescription" class="form-control" name="noteDescription" type="text" value="<%= note.description %>">
        </div>
        <div class="mb-3">
            <label for="noteBody" class="form-label">note Body</label>
            <textarea id="noteBody" class="form-control" name="noteBody"><%= note.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/" class="btn btn-secondary">Cancel</a>
    </form>
</body>
</html>
